<?xml version="1.0" encoding="utf-8"?>
<com.hn.linzi.views.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/activity_bg"
                                        android:orientation="vertical" >

    <com.hn.linzi.views.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rela3"
        app:layout_heightPercent="7.8%h"
        android:background="@drawable/daohanglan" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daohanglan"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/classicbook_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fanhui" />
    </com.hn.linzi.views.PercentRelativeLayout>

    <com.hn.linzi.views.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="22dp"
        app:layout_heightPercent="5.3125%h"
        app:layout_widthPercent="91.7%w"
        app:layout_marginTopPercent="4.5%w"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sc_sousuo" >

        <EditText
            android:id="@+id/cbmain_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="13.6%w"
            app:layout_marginRightPercent="8%w"
            android:background="@android:color/transparent"
            android:hint="输入关键字查询"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.hn.linzi.views.PercentLinearLayout>

    <com.hn.linzi.views.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_marginTopPercent="7%w"
        app:layout_heightPercent="86.8875%h" >

        <GridView
            android:id="@+id/cbmain_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="5.6%w"
            app:layout_marginRightPercent="5.5%w"
            android:gravity="center"
            android:horizontalSpacing="8dp"
            android:numColumns="3"
            android:verticalSpacing="17dp" >
        </GridView>
    </com.hn.linzi.views.PercentLinearLayout>

</com.hn.linzi.views.PercentLinearLayout>