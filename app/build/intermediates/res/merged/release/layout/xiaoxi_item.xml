<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xiaoxi_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xx_itembg"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/xiaoxi_img"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="22dp"
        android:background="@drawable/weidu_xue"
        android:clickable="false"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/xiaoxi_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:clickable="false"
            android:focusable="false"
            android:textColor="#FFFFFF"
            android:textSize="10dp" >
        </TextView>

        <TextView
            android:id="@+id/xiaoxi_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:clickable="false"
            android:focusable="false"
            android:textColor="#FFFFFF"
            android:textSize="18dp" >
        </TextView>

        <TextView
            android:id="@+id/xiaoxi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/xiaoxi_send"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusable="false"
            android:textColor="#FFFFFF"
            android:textSize="15dp" >
        </TextView>
    </RelativeLayout>

</LinearLayout>