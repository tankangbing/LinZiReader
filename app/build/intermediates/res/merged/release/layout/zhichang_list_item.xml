<?xml version="1.0" encoding="utf-8"?>
<com.hn.linzi.views.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical" >

    <com.hn.linzi.views.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="25.3%w"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.hn.linzi.views.RoundImageView
            android:id="@+id/zhichang_list_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="25.3%w"
            android:scaleType="fitXY"
            app:borderRadius="5dp"
            app:type="round" />

        <com.hn.linzi.views.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="63%w"
            app:layout_marginLeftPercent="2.2%w"
            android:background="@drawable/huodongneirongbg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zhichang_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                app:layout_marginLeftPercent="18.6%h"
                app:layout_marginTopPercent="4.5%h"
                app:layout_textSizePercent="13.7%h" />

            <TextView
                android:id="@+id/zhichang_list_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="3%h"
                app:layout_textSizePercent="11.5%h"
                app:layout_marginLeftPercent="18.6%h"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FFFFFF" />
            
            <com.hn.linzi.views.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="18.6%h"
                app:layout_marginTopPercent="3%h"
                android:orientation="horizontal">
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    app:layout_textSizePercent="5%w"
                    android:text="薪资:" />
                
                <TextView
	                android:id="@+id/zhichang_list_pay"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:ellipsize="end"
	                android:singleLine="true"
	                android:textColor="#FCD143"
	                app:layout_textSizePercent="5%w" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zhichang_list_paytime"
                    android:textColor="#FFFFFF"
                    app:layout_textSizePercent="5%w"
                    android:text="/月" />
            </com.hn.linzi.views.PercentLinearLayout>

            <TextView
                android:id="@+id/zhichang_list_peoplenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                app:layout_marginLeftPercent="18.6%h"
                android:text="招聘人数"
                android:textColor="#FFFFFF"
                app:layout_marginTopPercent="3%h"
                app:layout_textSizePercent="11.5%h" />

            <TextView
                android:id="@+id/zhichang_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                app:layout_marginLeftPercent="18.6%h"
                android:text="发布日期"
                android:textColor="#FFFFFF"
                app:layout_marginTopPercent="3%h"
                app:layout_textSizePercent="11.5%h" />
        </com.hn.linzi.views.PercentLinearLayout>
    </com.hn.linzi.views.PercentLinearLayout>

</com.hn.linzi.views.PercentLinearLayout>