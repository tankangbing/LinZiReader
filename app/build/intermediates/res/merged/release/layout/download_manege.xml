<?xml version="1.0" encoding="utf-8"?>
<com.hn.linzi.views.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:id="@+id/activity_bg"
                                        android:orientation="vertical"
                                        tools:context="com.hn.linzi.activity.DownloadManageActivity" >
    
    <com.hn.linzi.views.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.8%h"
        android:background="@drawable/daohanglan2" >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daohanglan"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/manage_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fanhui" />

        <Button
            android:id="@+id/manage_backtoshujia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/backtosjkc" />
    </com.hn.linzi.views.PercentRelativeLayout>
    
    <com.hn.linzi.views.PercentRelativeLayout
        android:id="@+id/downbg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="4.375%h"
        android:background="@drawable/xiazaizhong" >
        
        <Button
            android:id="@+id/toyixiazai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:layout_widthPercent="50%w"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/xiazaizhong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            app:layout_widthPercent="50%w"
            android:background="@android:color/transparent" />
	</com.hn.linzi.views.PercentRelativeLayout>
	
    <ListView
        android:id="@+id/dlmanage_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="87.825%h" >
    </ListView>
</com.hn.linzi.views.PercentLinearLayout>