<?xml version="1.0" encoding="utf-8"?>
<com.hn.linzi.views.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:id="@+id/activity_bg"
                                        android:orientation="vertical"
                                        tools:context="com.hn.linzi.activity.HuoDongDetailsActivity" >

    <com.hn.linzi.views.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.8%h"
        android:background="@drawable/daohanglan2" >

        <TextView
            android:id="@+id/daohanglan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="活动详情"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/huodong_detail_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/fanhui" />

        <ImageButton
            android:id="@+id/huodong_detail_shoucang"
            android:layout_width="35dp"
            android:layout_height="33.6dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/shoucang"
            android:background="@android:color/transparent" />
    </com.hn.linzi.views.PercentRelativeLayout>

    <ScrollView
        android:id="@+id/huodong_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="84.4%h" >

        <com.hn.linzi.views.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.hn.linzi.views.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_heightPercent="34.7%w"
                app:layout_widthPercent="91.1%w"
                android:orientation="horizontal" >

                <com.hn.linzi.views.PercentFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="38.1%w" >

                    <com.hn.linzi.views.RoundImageView
                        android:id="@+id/huodong_detail_fengmian"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right|bottom"
                        app:layout_heightPercent="96.4%h"
                        app:layout_widthPercent="96.4%h"
                        android:scaleType="fitXY"
                        app:borderRadius="5dp"
                        app:type="round" />

                    <ImageView
                        android:id="@+id/xuefenbg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/xuefenbg" />

                    <com.hn.linzi.views.RotateTextView
                        android:id="@+id/huodong_detail_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:degree="225dp" />
                </com.hn.linzi.views.PercentFrameLayout>

                <com.hn.linzi.views.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="61.9%w"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="0dp"
                        app:layout_marginLeftPercent="7.4%w"
                        app:layout_heightPercent="96.4%h"
                        android:layout_gravity="bottom"
                        android:background="#33FFFFFF" />

                    <com.hn.linzi.views.PercentLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_marginLeftPercent="7.4%w"
                        app:layout_widthPercent="85%w"
                        app:layout_heightPercent="96.4%h"
                        android:layout_gravity="bottom"
                        android:orientation="vertical" >

                        <com.hn.linzi.views.MarqueeTextView
                            android:id="@+id/huodong_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_marginTopPercent="19.2%h"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/iconfont_renshu" />

                            <TextView
                                android:id="@+id/huodong_detail_peopleCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24px"
                                android:singleLine="true"
                                android:textColor="#7FFFFFFF"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_marginTopPercent="7.2%h"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/iconfont_jigou" />

                            <TextView
                                android:id="@+id/huodong_detail_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24px"
                                android:singleLine="true"
                                android:textColor="#7FFFFFFF"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </com.hn.linzi.views.PercentLinearLayout>
                </com.hn.linzi.views.PercentLinearLayout>
            </com.hn.linzi.views.PercentLinearLayout>

            <com.hn.linzi.views.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15px"
                app:layout_widthPercent="91.1%w"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/huodong_detail_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:textColor="#7FFFFFFF"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"
                    android:background="#7FFFFFFF" />
            </com.hn.linzi.views.PercentLinearLayout>

            <com.hn.linzi.views.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16px"
                app:layout_widthPercent="91.1%w"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35px"
                        android:src="@drawable/iconfont_biaoqian" />

                    <TextView
                        android:id="@+id/huodong_detail_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34px"
                        android:background="@drawable/huodong_green_tag"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#FFFFFF"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15px"
                    android:background="#7FFFFFFF" />
            </com.hn.linzi.views.PercentLinearLayout>

            <com.hn.linzi.views.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16px"
                app:layout_widthPercent="91.1%w"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35px"
                        android:src="@drawable/iconfont_shijian" />

                    <TextView
                        android:id="@+id/huodong_detail_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34px"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15px"
                    android:background="#7FFFFFFF" />
            </com.hn.linzi.views.PercentLinearLayout>

            <com.hn.linzi.views.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16px"
                app:layout_widthPercent="91.1%w"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35px"
                        android:src="@drawable/iconfont_pingjia" />

                    <TextView
                        android:id="@+id/huodong_detail_access"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="34px"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15px"
                    android:background="#7FFFFFFF" />
            </com.hn.linzi.views.PercentLinearLayout>

            <com.hn.linzi.views.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_widthPercent="91.1%w"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17px"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动介绍"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#79c5a1" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/huodong_detail_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17px"
                    android:background="@drawable/qiandaoerweima"
                    android:visibility="gone" />
            </com.hn.linzi.views.PercentRelativeLayout>

            <com.hn.linzi.views.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                app:layout_widthPercent="91.1%w"
                android:background="@drawable/jieshaobg"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <TextView
                    android:id="@+id/huodong_detail_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="5"
                    android:textColor="#FFFFFF" />
            </com.hn.linzi.views.PercentRelativeLayout>

            <com.hn.linzi.views.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_widthPercent="91.1%w"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17px"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发表评论"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#79c5a1" />
                </LinearLayout>
            </com.hn.linzi.views.PercentLinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="720" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="656"
                    android:background="@drawable/layout_upcorners"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/huodong_detail_myComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:hint="编辑内容"
                        android:maxLines="3"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="720" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="656"
                    android:background="@drawable/layout_bottomcorners"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96px"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:minHeight="96px"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="插入图片"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/huodong_detail_myCommentImg1"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/charutupian" />

                        <ImageButton
                            android:id="@+id/huodong_detail_myCommentImg2"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/charutupian"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/huodong_detail_myCommentImg3"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/charutupian"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/huodong_detail_myCommentImg4"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/charutupian"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/huodong_detail_myCommentImg5"
                            android:layout_width="96px"
                            android:layout_height="96px"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/charutupian"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="720" >

                <ImageButton
                    android:id="@+id/huodong_detail_sendComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fasongbutton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="720" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="656" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17px"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="交流区"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#79c5a1" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/huodong_detail_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="17px"
                        android:background="@drawable/xindaojiu" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="720" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="656"
                    android:background="@drawable/layout_allcorners" >

                    <com.hn.linzi.views.XListView
                        android:id="@+id/huodong_detail_commentList"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:divider="#00000000" >
                    </com.hn.linzi.views.XListView>

                    <ImageView
                        android:id="@+id/huodong_no_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </com.hn.linzi.views.PercentLinearLayout>
    </ScrollView>
    
	<com.hn.linzi.views.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.8%h"
        android:gravity="center" >
        
        <TextView 
            android:id="@+id/huodong_detail_signup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_widthPercent="91.1%w"
            android:text="报名"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@drawable/huodong_signupbtn" />
    </com.hn.linzi.views.PercentRelativeLayout>
</com.hn.linzi.views.PercentLinearLayout>